{
    "sbs" : {
        "appDir": "/home/server/",

        "database": {
            "dbFilePath": "sbs.db",
            "queriesDir": "sbs/resources/",
            "reCreateDb": false
        },

        "logging": {
            "enabled": false
        }
    },

    "jdkbuild": {
        "enabled": true,
        "workDir": "work/jdkbuild/",
        "mockOutputDir": "UNSPECIFIED",
        "sourceDir": "jdk/",
        "buildDir": "work/jdkbuild/build/",
        "bootJdkDir": "apps/bootjdk/",
        "jtregDir": "apps/jtreg/",
        "bashPath": "/bin/bash",
        "hgPath": "/usr/bin/hg",
        "makePath": "/usr/bin/make",
        "logLevel": "info",
        "additionalConfigureArguments": [
            "--disable-warnings-as-errors"
        ],
        "target": "images"
    },

    "tier1": {
        "enabled": true,
        "workDir": "work/tier1/",
        "buildDir": "work/jdkbuild/build/",
        "mockOutput": "UNSPECIFIED",
        "makePath": "/usr/bin/make",
        "target": "run-test-tier1"
    },

    "jcstress": {
        "enabled": true,
        "workDir": "work/jcstress/",
        "mockOutput": "UNSPECIFIED",
        "baselineOutput": "baseline/jcstress.log",
        "jcstressJarPath": "apps/jcstress/jcstress.jar",
        "xmxMemoryLimitMB": 1024,
        "mode": "quick"
    },

    "specjvm": {
        "enabled": true,
        "workDir": "work/specjvm/",
        "mockOutput": "UNSPECIFIED",
        "baselineOutput": "baseline/specjvm.log",
        "specjvmJarPath": "apps/specjvm/jmh-specjvm2016.jar",
        "ncNotePath": "sbs/resources/nc_note.txt",
        "xmxMemoryLimitMB": 1024,
        "threadsCount": 2,
        "excludedBenchmarks": [
            "Compiler.compiler",
            "CryptoAes.test",
            "Derby.test",
            "ScimarkFFT.large",
            "ScimarkLU.large",
            "ScimarkSOR.large",
            "ScimarkSparse.large",
            "ScimarkSparse.small"
        ]
    }
}
